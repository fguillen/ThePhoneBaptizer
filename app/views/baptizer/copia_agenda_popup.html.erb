				<script>
					function pillar_phone(){
						el_select = document.getElementById('select_copia_agenda');
						contacto = el_select.options[ el_select.selectedIndex ].value;
						//
						// coger solo los 9 ultimos caracteres
						//
						if (contacto.length > 9) {
							contacto = contacto.substring( contacto.length-9 );
						}
//						alert( opcion.value );
//						alert( window.parent.document.getElementById( 'main'  ) );
						window.opener.document.getElementById( 'phone' ).value = contacto;
						window.close();
					}
				</script>
	
