    <body id="bautizador">
        <img id="top" src="/images/top.png" alt="" name="top" class="popup"/>
		<% form_tag :action => 'enviar_sms' do %>
        <div id="contenedor" class="popup">
            <ul id="header" class="popup">
                <li class="left">
                    Para enviar el teléfono bautizado al contacto.
                </li>
            </ul>

            <div id="contenido" class="popup">
                <div id="main" class="popup">
                  <h1 class="popup sms">Enviar teléfono bautizado a un contacto</h1>
                  <div id="barra_menu">
                      <h2>Requisitos</h2>
                      <p>
                          Debes tener tu clave de la <a href="http://open.movilforum.com/ihttpes">API SMS de Movistar</a>.
                      </p>
                      <h2>Instrucciones</h2>
                      <p>
                          Inserta tu teléfono y tu clave.
													Se propone un sms tipo pero puedes modificarlo.
													Pulsa a <strong>'enviar'</strong> y le llegará el mensaje a tu contacto.
													Recuerda que esta acción tiene un valor que dependerá de
													Movistar.
                      </p>
                  </div>
										<% if flash[:error] %>
										<div id="error">
											<p><%= flash[:error] %></p>
										</div>
										<% end %>

										<% if flash[:notice] %>
										<div id="notice">
											<p><%= flash[:notice] %></p>
										</div>
										<% end %>
																				
										<hr/>
										<h2 class="cabecera_formulario popup">Tu teléfono</h2>
                    <%= text_field_tag :sms_phone %><br/>
										
										<hr/>
										<h2 class="cabecera_formulario popup">Tu clave</h2>
                    <%= password_field_tag :sms_pass %>
										
										<hr/>
										<h2 class="cabecera_formulario popup">Tu contacto</h2>
                    <%= text_field_tag :sms_contacto, params[:sms_phone] %>
										
										<hr/>
										<h2 class="cabecera_formulario popup">Mensaje</h2>
                    <textarea name="sms_text" rows="4">Tu teléfono ha sido bautizado como '<%= params[:sms_phone_name] %>'.</textarea>
															
										<%= submit_tag 'enviar' %>

                </div>
                <!-- main -->
            </div>
            <!--contenido-->
            <div class="footer popup">

            </div>
        </div>
        <!--contenedor-->
				<% end %><!-- form -->
				
				<img id="bottom" src= "/images/bottom.png" alt="" name="bottom" class="popup"/>
		
